{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Deployment",
  "description": "Deployment environment topology",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/$defs/deploymentNode" }
    }
  },
  "$defs": {
    "deploymentNode": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "name": {
          "type": "string"
        },
        "technology": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": { "$ref": "#/$defs/deploymentNode" }
        },
        "instances": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["container"],
            "properties": {
              "container": {
                "type": "string",
                "description": "Reference to container"
              },
              "replicas": {
                "type": "integer",
                "minimum": 1,
                "default": 1
              },
              "properties": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "properties": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
