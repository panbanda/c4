{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "C4 Module",
  "description": "Workspace manifest file",
  "type": "object",
  "required": ["version", "name"],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["1.0"],
      "description": "Schema version"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Workspace name"
    },
    "schema": {
      "type": "string",
      "description": "Path to schema directory"
    },
    "include": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Glob patterns for files to include"
    },
    "imports": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "ref": { "type": "string" },
          "path": { "type": "string" }
        }
      },
      "description": "External model imports"
    },
    "options": {
      "type": "object",
      "properties": {
        "showMinimap": { "type": "boolean" }
      },
      "description": "Display options"
    }
  },
  "additionalProperties": false
}
