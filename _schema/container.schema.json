{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Container",
  "description": "A deployable/runnable unit within a software system",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique identifier within system"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Display name"
    },
    "description": {
      "type": "string",
      "description": "Responsibility and purpose"
    },
    "technology": {
      "type": "string",
      "description": "Implementation technology stack"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "properties": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
